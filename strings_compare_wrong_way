#include <stdio.h>
#include <string.h>

int main()
{
    char i[4] ;
    printf("i: ");
    scanf("%s5", i);
    char *j = "hi!";
    
    if (i == j)
    {
        printf("same\n");
    }
    else
    {
        printf("Different\n");
    }
}


//That is the correct way to define the memory use by the string size
#include <stdlib.h>
int main()
{
    printf("Enter a string: ");
    char *i = NULL;
    size_t bufferSize = 0; // siez_t is a variable type, its a int. and in this line it is givene defultly = 0 
    getline(&i, &bufferSize, stdin);// getline passes a value to location &i with size defined in &bufferSize with use od stdin which is the standart terminal input
    
    char *j = "hi!";
    
    if (i == j)
    {
        printf("same\n");
    }
    else
    {
        printf("Different\n");
    }
    printf("%s\n", i);
    //printf("%s\n", j);
}
